{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,

    // Node.js erasable syntax support
    "target": "esnext",
    "module": "nodenext",
    "rewriteRelativeImportExtensions": true,
    "erasableSyntaxOnly": true,
    "verbatimModuleSyntax": true
  }
}
